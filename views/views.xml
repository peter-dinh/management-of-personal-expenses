<odoo>
  <data>

    <menuitem name="app_demo" id="app_demo.menu_root" />

    <record model="ir.ui.view" id="app_demo.hinh_thuc_tree">
      <field name="name">app_demo list</field>
      <field name="model">app_demo.danh_sach_hinh_thuc</field>
      <field name="arch" type="xml">
        <tree>
          <field name="ten_hinh_thuc"/>
          <field name="loai_hinh_thuc"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="app_demo.tai_khoan_tree">
      <field name="name">Danh sach tai khoan</field>
      <field name="model">app_demo.tai_khoan_quan_ly</field>
      <field name="arch" type="xml">
        <tree>
          <field name="user_id"/>
          <field name="so_du_tai_khoan"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="app_demo.tai_khoan_kanban">
      <field name="name">Danh sach tai khoan Kanban</field>
      <field name="model">app_demo.tai_khoan_quan_ly</field>
      <field name="arch" type="xml">
        <kanban>
          <templates>
            <t t-name="kanban-box">
              <div t-attf-class="oe_kanban_global_click">
                <div class="oe_kanban_details">
                  <div class="o_kanban_record_top">
                    <div class="o_kanban_record_headers">
                      <strong class="o_kanban_record_title">
                        <field name="user_id" />
                      </strong>
                    </div>
                  </div>
                  <ul>
                    <li id="data" />
                    <li>Số dư: <field name="so_du_tai_khoan"/></li>
                    <li>Số khoản thu: <field name="so_khoan_thu"/></li>
                    <li>Số khoản chi: <field name="so_khoan_chi"/></li>
                    <li>Số khoản vay: <field name="so_khoan_no"/></li>
                    <li>Số khoản cho vay: <field name="so_khoan_cho_no"/></li>
                  </ul>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>

    
    <record model="ir.actions.act_window" id="app_demo.act_window_taikhoan">
      <field name="name">Quản lý tài khoản</field>
      <field name="res_model">app_demo.tai_khoan_quan_ly</field>
      <field name="view_mode">kanban,tree,form</field>
    </record>

    <menuitem name="Tai khoan" id="app_demo.menu_1" parent="app_demo.menu_root" action="app_demo.act_window_taikhoan"/>


    <record model="ir.ui.view" id="app_demo.danh_sach_thu_chi_tree">
      <field name="name">Danh sách thu chi</field>
      <field name="model">app_demo.danh_sach_thu_chi</field>
      <field name="arch" type="xml">
        <tree>
          <field name="id_tai_khoan"/>
          <field name="so_tien"/>
          <field name="hinh_thuc"/>
        </tree>
      </field>
    </record>

    <record model="ir.actions.act_window" id="app_demo.action_window_thu_chi">
      <field name="name">Quản lý thu chi</field>
      <field name="res_model">app_demo.danh_sach_thu_chi</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Thu chi" id="app_demo.thu_chi" parent="app_demo.menu_root" action="app_demo.action_window_thu_chi"/>

    <record model="ir.ui.view" id="app_demo.danh_sach_vay_tree">
      <field name="name">Danh sách các khoản vay</field>
      <field name="model">app_demo.danh_sach_cac_khoan_vay</field>
      <field name="arch" type="xml">
        <tree>
          <field name="id_tai_khoan"/>
          <field name="so_tien"/>
          <field name="loai_hinh_thuc"/>
        </tree>        
      </field>
    </record>

    <record model="ir.actions.act_window" id="app_demo.action_window_no">
      <field name="name">Quản lý nợ</field>
      <field name="res_model">app_demo.danh_sach_cac_khoan_vay</field>
      <field name="view_mode">tree,form</field>
    </record>
    
    <menuitem name="No" id="app_demo.no" parent="app_demo.menu_root" action="app_demo.action_window_no"/>
    
   
  </data>
</odoo>